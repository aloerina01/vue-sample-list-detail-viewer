{
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "plugins": ["prettier"],
  "parser": "eslint-babel",
  "parserOptions": {
    "version": 2018,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn"
  },
  "override": [
    {
      "files": ["*.vue"],
      "extends": ["plugin:vue/recommended"],
      "plugins": ["vue"],
      "parser": "vue-eslint-parser",
      "parserOptions": {
        "parser": "babel-eslint"
      }
    }
  ]
}
